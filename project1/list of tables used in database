CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    uname VARCHAR(50),
    semail VARCHAR(100) UNIQUE,
    password VARCHAR(100),
    phone BIGINT,
    gender VARCHAR(10),
    reset_token VARCHAR(255)
);
//for users when they login their details are stored 
//for plants using this table
CREATE TABLE plants (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    type VARCHAR(50),
    description TEXT,
    price DECIMAL(10,2),
    image VARCHAR(100)
);
